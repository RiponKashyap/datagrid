<!-- Previous page link -->
<?php if (isset($this->previous)): ?>
  <a href="<?= $this->url(array('page' => $this->previous)).(!empty($_GET) ? '?'.http_build_query($_GET) : ''); ?>">&lt; Précédents</a> |
