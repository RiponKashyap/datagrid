    <a href="<?= $this->url(array('page' => $page)).(!empty($_GET) ? '?'.http_build_query($_GET) : ''); ?>"><?= $page; ?></a> |
  <?php else: ?>
    <?= $page; ?> |
  <?php endif; ?>
<?php endforeach; ?>

<!-- Next page link -->
<?php if (isset($this->next)): ?>
<a href="<?= $this->url(array('page' => $this->next)).(!empty($_GET) ? '?'.http_build_query($_GET) : ''); ?>">Suivants &gt;</a>
